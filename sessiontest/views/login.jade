extends base

block navbar
    ul.nav.navbar-nav
        li
            a(href='#') Blog
        li
            a(href='#') Projects
        li
            a(href='#') Contact
    ul.nav.navbar-nav.navbar-right
        li
            a(href='/logout') Logout



block content
  .row
    .col-md-6.col-md-offset-3
      h1 Login
      if message
        if goodmessage
            h4.good-message #{message}
        else
            h4.bad-message #{message}

      form(role='form', name='input', action='/login', method='post')
          .form-group
            label Username
            input.form-control(type='username', placeholder='Username')
          .form-group
            label Password
            input.form-control(type='password', placeholder='Password')
          .form-group
            button.btn.btn-default(type='submit') Submit